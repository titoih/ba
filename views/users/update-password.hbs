<div class="form-style-3">
  <form action="/usuario/actualizar-clave" method="POST">
    <fieldset><legend>Actualiza tu contraseña</legend>
      <label for="field2"><span>Email</span><input type="email" class="input-field" name="email" value="{{user}}"/></label>
      <label for="field3"><span>Elige Contraseña </span><input type="password" class="input-field" name="password"/></label>
       <label><span> </span><input type="submit" value="Finalizar" /></label>
    </fieldset>
  </form>
  <div>
    {{#if errorMessage}}
      {{errorMessage}}
    {{/if}}
  </div>
</div>