<div class="form-style-3">
  <form action="/mis-anuncios" method="POST">
    <fieldset><legend>Acceso a tu cuenta</legend>
      <label for="field2"><span>Email</span><input type="email" class="input-field" name="email" value="{{email}}"/></label>
      <label for="field3"><span>Contraseña </span><input type="password" class="input-field" name="password"/></label>
       <label><span> </span><input type="submit" value="Loggin" /></label>
       <p><a href="/usuario/recuperar-clave"><i>No recuerdo mi contraseña</i></a></p>
    </fieldset>
  </form>
  <div>
    {{#if errorMessage}}
      {{errorMessage}}
    {{/if}}
  </div>
</div>